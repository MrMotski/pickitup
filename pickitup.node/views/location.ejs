{% extends 'layout.ejs' %}

{% block content %}
		
      <!-- Main component for a primary marketing message or call to action -->
<div class="col-lg-3"></div>
<div class="col-lg-6 well">
	<h1 style="text-align: center">Location</h1>
	<div class="row">
		<div class="col-lg-12 well">
			<div class="form-group{% if errors.location %} has-error{% endif %}">
				<div class="col-lg-12" id="map-canvas" style="height: 300px;"></div>
			</div>
			<div class="form-group{% if errors.title %} has-error{% endif %}">
				<label class="control-label" for="title">Title</label>
				{{location.title}}
			</div>
		</div>
	</div>
</div>
<div class="col-lg-3"></div>

{% endblock %}
{% block pageJs %}
		<script>
	        $(function(){
	            createLocationMap({{location.lat}}, {{location.lng}},'{{location.title}}');
	        });
		</script>
{% endblock %}