{% extends 'layout.ejs' %}

{% block content %}
		
      <!-- Main component for a primary marketing message or call to action -->
<div class="col-lg-3"></div>
<div class="col-lg-6 well">
	<h1 style="text-align: center">Game</h1>
	<div class="row">
		<div class="col-lg-12 well">
			<div class="form-group{% if errors.location %} has-error{% endif %}">
				<div class="col-lg-12" id="map-canvas" style="height: 300px;"></div>
			</div>
			<div class="form-group{% if errors.title %} has-error{% endif %}">
				<label class="control-label" for="title">Title</label>
				{{game.title}}
			</div>
			<div class="form-group{% if errors.startDate %} has-error{% endif %}">
				<label class="control-label" for="duration">Start Date</label>
				{{game.startDate}}
			</div>
			<div class="form-group{% if errors.duration %} has-error{% endif %}">
				<label class="control-label" for="exampleEndDate">Duration</label>
				{{game.duration}}
			</div>
			<div
				class="form-group{% if errors.description %} has-error{% endif %}">
				<label class="control-label" for="description">Description</label>
				{{game.description}}
			</div>
			<div class="form-group">
				<label>Confirmed Players:</label>
		        {% for player in players %}
				<span class="label label-default">{{player.screenName}}</span>
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="row">
		
	</div>
</div>
<div class="col-lg-3"></div>

{% endblock %}
{% block pageJs %}
		<script>
	        $(function(){
	            createGameMap({{game.location.lat}}, {{game.location.lng}},'{{game.title}}');
	        });
		</script>
{% endblock %}